// advanced solution-19
#include<iostream>
#include<cmath>
using namespace std;

void Read_Diameter(float &D)
{
	cout << "enter Diameter " ;
	cin >> D ;
	
	
}

float CalcluteCircleArea(float D)
{
	const long double PI = 3.14159265358979323846264338327950288419716939937510 ;
	float Area = (PI*pow(D , 2)) / 4 ; 
	return Area ; 
}

void PrintResult(float Area)
{
	cout << "the circle of Area = : " << Area ;
}


int main()
{
	
	float D ;
	
	Read_Diameter(D) ;
	
	PrintResult(CalcluteCircleArea(D) ) ;
	
	
	return 0 ;
}
